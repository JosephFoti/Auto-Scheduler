<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <style media="screen">

    .schedule-wrapper{
      width:90vw;
      height: 90vh;
      margin-left: 5vw;
      margin-top: 5vh;
    }

    .column {
      width: 12.5%;
      height: 100%;
      float: left;
      box-sizing: border-box;
      border: 1px solid grey;
      position: relative;
    }

    .event {
      position: absolute;
      width: 100%;
      padding: 5px;
      box-sizing: border-box;
      background-color: #ffc5c5;
    }

    </style>
  </head>
  <body>

    <div class="schedule-wrapper">
      <% for (let key of keys) { %>
        <% let day = block[key] %>
        <div class="column">
          <div class="column-name">
            <%= day.title %>
          </div>
        <% for (let event of day.events) { %>
          <div class="event" style="top:<%=(event.position.top * 100) + '%' %>;height:<%=(event.position.height*100) + '%'%>" ><%=event.title%></div>
        <% } %>

        </div>

      <% } %>

    </select>

  </body>
</html>
